<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <% if not current_user%> 
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo2.png" %>
    <% end %>
  <% elsif current_user.role == "student" && Student.find_by(user: current_user)%>
    <%= link_to student_page_path, class: "navbar-brand" do %>
      <%= image_tag "logo2.png" %>
    <% end %>
  <% else %>
    <%= link_to volunteer_page_path, class: "navbar-brand" do %>
      <%= image_tag "logo2.png" %>
    <% end %>
  <% end %>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if current_user %>
        <li class="nav-item active">
          <%= link_to "", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "", "#", class: "nav-link" %>
        </li>

        <li class="nav-item dropdown">
          <%= image_tag "menu2.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if current_user.role == "student" && Student.find_by(user: current_user)%>
            <%= link_to "Edit CV", student_path(Student.find_by(user: current_user)), class: "dropdown-item" %>
            <%= link_to "Dashboard", student_page_path, class: "dropdown-item" %>
            <% end %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Sign Up / Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
