<body class="bg-light">

<div class="container p-5">
<div class="row">
  <div class="col-lg-4 bg-dark text-white text-center py-2">
      <div class="header-left">
      <% if @student.photo.attached? %>
        <%= cl_image_tag @student.photo.key, class: "img-thumbnail rounded-circle mb-2" %>
      <% end %>
          <h1 class="display-5"><%= @student.full_name%></h1>
           <ul class="list-unstyled text-white-50 ml-6 py-2 text-left">
              <li class="list item">
              <li><i class="fas fa-birthday-cake mx-4"></i> Age: <%=@student.age%></li>
              <li><i class="fas fa-globe mx-4"></i> Nationality: <%=@student.nationality%></li>
                        <div class="text-center py-2">
                         <%= link_to "Edit", edit_student_path(@student) %>
                        </div>
                <hr class="text-white-50">
                        <div>
                          <% if @student.languages.first == nil%>
                          <%= ""%>
                          <% else%>
                <li><i class="fa fa-language mx-4"></i> Idiom: <%=@student.languages.first.language%></li>
                <li><i class="fas fa-sliders-h mx-4"></i> Fluency: <%=@student.languages.first.score%> %</li>
                          <% end%>
                        </div>
                         
                         <div>
                          <% if @student.languages.second == nil%>
                          <%= ""%>
                          <% else%>
                <li><i class="fa fa-language mx-4"></i> Idiom:  <%=@student.languages.second.language%></li>
                <li><i class="fas fa-sliders-h mx-4"></i> Fluency: <%=@student.languages.second.score%> %</li>
                          <% end%>
                        </div>

                          <div>
                          <% if @student.languages.third == nil%>
                          <%= ""%>
                          <% else%>
                <li><i class="fa fa-language mx-4"></i>  Idiom: <%=@student.languages.third.language%></li>
                <li><i class="fas fa-sliders-h mx-4"></i> Fluency: <%=@student.languages.third.score%> %</li>
                          <% end%>
                        </div>

                                                  <div>
                          <% if @student.languages.fourth == nil%>
                          <%= ""%>
                          <% else%>
                <li><i class="fa fa-language mx-4"></i>  Idiom: <%=@student.languages.fourth.language%></li>
                <li><i class="fas fa-sliders-h mx-4"></i> Fluency: <%=@student.languages.fourth.score%> %</li>
                          <% end%>
                        </div>
                        <p>
<%= link_to "Add Languages", new_student_language_path(@student)%>
</p>
              </li>
            </ul>          
      </div>

          <div>
          <h5 class="text-uppercase bg-white text-dark py-2 rounded-pill">contact / local</h5>
            <ul class="list-unstyled text-white-50 ml-6 py-2 text-left">
              <li class="list item">
                <li><i class="fas fa-mobile-alt mx-4"></i> <%= @student.phone_number%></li>
                <li><i class="fab fa-github mx-4"></i> <%= @student.link_to_github%></li>
                <li><i class="fab fa-linkedin mx-4"></i> <%= @student.link_to_linkedin%></li>
                <li><i class="fas fa-envelope-open-text mx-4"> </i><%= @student.user.email %></li>
                <li><i class="fas fa-laptop-house mx-4"></i>Remote work? [ <%= @student.remoto_work%> ]</li>
                <li><i class="fas fa-map-marker-alt mx-4"></i> I live in <%= @student.city_at%></li>
                <li><i class="fas fa-passport mx-4"></i> Passport? [ <%= @student.passport%> ]</li>
                <li><i class="fas fa-globe-americas mx-4"></i> Work abroad? [ <%= @student.work_abroad%> ]</li>
                <li><i class="fas fa-map-marker-alt mx-4"></i> I can live in <%= @student.city_to%></li>
              </li>
            </ul>
          </div>

          <div>
            <h5 class="text-uppercase bg-white text-dark py-2 rounded-pill">skills</h5>
              <ul class="list-unstyled text-white-50 ml-6 py-2 text-left">
                <%@student.student_skills.each do |student_skill|%>
                <p><i class="fas fa-book mx-4"></i> <%=student_skill.skill.name%><br>
                  <p > <i class="fas fa-book-open mx-4"></i>......... <%=student_skill.skill.skill_type%><br>
                      <i class="fas fa-sliders-h mx-4"></i> Score: <%=student_skill.score%> %</p>
                       <hr>
                <%end%>
                <div class="text-dark py-4">
                <%= link_to "Add skill", new_student_student_skill_path(@student), class: "text-blue"%>
                </div>
              </ul>
          </div>
          <div>
            <h5 class="text-uppercase bg-white text-dark py-2 rounded-pill">education</h5>
              <ul class="list text-white-50 ml-6 py-2 text-left text-capitalize">
                <%@student.courses.each do |course|%>
                <p><i class="far fa-calendar-alt"></i>  <%=course.started_at%> - <%=course.finalized_at%><br>
                Course: <%=course.title%><br class="list-item">
                Company: <%=course.company%><br class="list-item">
                <p><i class="fas fa-book-open"></i>  <%=course.description%></p>
                <hr>
                <%end%>
                <div class="text-dark py-4">
                <%= link_to "Add course", new_student_course_path(@student), class: "text-blue"%>
              </ul>
          </div>
          
  </div>
    
    <div class="col-lg-8 bg-white text-dark py-4 px-5">
      <div class="header-right">
    <h4 class="text-uppercase text-center">profile</h4>
      <hr>
<br>
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active text-center ">
            <% if @student.fields_of_interests.first == nil%>
            <%= ""%>
            <% else%>
            <ul class="list">
            <h5 class="text-uppercase"> <%=@student.fields_of_interests.first.interest%></h5>
            <% end%>
    </div>
    <div class="carousel-item text-center">
            <% if @student.fields_of_interests.second == nil%>
            <%= ""%>
            <% else%>
            <ul class="list">
            <h5 class="text-uppercase"> <%=@student.fields_of_interests.second.interest%></h5>
            <% end%>
    </div>
    <div class="carousel-item text-center">
            <% if @student.fields_of_interests.third == nil%>
            <%= ""%>
            <% else%>
            <ul class="list">
            <h5 class="text-uppercase"> <%=@student.fields_of_interests.third.interest%></h5>
            <% end%>
    </div>
    <div class="carousel-item text-center">
        <% if @student.fields_of_interests.fourth == nil%>
        <%= ""%>
        <% else%>
        <ul class="list">
        <h5 class="text-uppercase"> <%=@student.fields_of_interests.fourth.interest%></h5>
        <% end%>
</div>
  </div>
</div>


        </div>
              <div class="text-dark py-4">
                <%= link_to "Add field of interest", new_student_fields_of_interest_path(@student), class: "text-blue "%>
              </div>

      </p>
  <div>
    <% @student.professional_experiences.each do |experience| %>
      <h4 class="text-uppercase"></h4>
      <hr>
      <p class="list-item">
      <h5 class="display-6 text-uppercase"> <%=experience.ocupation%></h5>
      <h6 class="text-uppercase text-black-50"> <%=experience.company%> / <%=experience.started_at%> - <%=experience.finalized_at%></h6>
      <p><%=experience.description%></p>
    <% end%>
  </div>

    <div>
      <p>
      <%= link_to "Add professional experience", new_student_professional_experience_path(@student), class: "text-blue "%>
      </p> 
    </div>

<div>
    <div class="header-right">
        <h4 class="text-uppercase text-center">portfolio</h4>
        <hr>
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <%@student.portfolio_types.each_with_index do |portfolio_type, index|%>
                <li data-target="#carouselExampleCaptions" data-slide-to="<%= index %>" class="<%= "active" if index == 0%>"></li>
              <% end %>
            </ol>
              <div class="carousel-inner">
              <%@student.portfolio_types.each_with_index do |portfolio_type, index|%>
                <div class="carousel-item <%= "active" if index == 0%>" >
                      <%= image_tag "template#{index+1}.PNG", alt: "", :width => 600%>
                  <div class="carousel-caption d-none d-md-block">
                  </div>
                  <h5><%=portfolio_type.title%></h5>
                </div>
                <% end %>
              </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
            </a>
        </div>
      </div>
            <p>
            <%= link_to "Add portfolio type", new_student_portfolio_type_path(@student) %>
            </p>
</div>
<hr>
<div>
    <div class="header-right">
        <h4 class="text-uppercase text-center">certificates</h4>
        <hr>


          <div id="carouselExampleCaptions2" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <%@student.certificates.each_with_index do |certificate, index|%>
                <li data-target="#carouselExampleCaptions" data-slide-to="<%= index %>" class="<%= "active" if index == 0%>"></li>
              <% end %>
            </ol>
              <div class="carousel-inner">
                <%@student.certificates.each_with_index do |certificate, index|%>
                    <div class="carousel-item <%= "active" if index == 0%>" >
                      <%= image_tag "certificate#{index+1}.PNG", alt: "", :width => 600 %>
                      <div class="carousel-caption d-none d-md-block">
                      </div>
                      <h5><%=certificate.image_title%></h5>
                    </div>
                      <% end %>
              </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions2" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions2" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
            </a>
        </div>
         </div>

            <p>
            <%= link_to "Add certificate type", new_student_certificate_path(@student) %>
            </p>
        <hr>
<div>
    <div class="header-right">
        <h4 class="text-uppercase">videos</h4>
        <hr>

        <% if @student.video.attached?  %>
        <%= cl_video_tag(@student.video.key, controls: true, :width => 600 ) %>
        <% end %>

    <div>

</body>
